<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="H1">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/h1_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H3" parent="H1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/h3_text_size</item>
    </style>
    <style name="H2" parent="H1">
        <item name="android:textSize">@dimen/h2_text_size</item>
    </style>
    <style name="Body" parent="H2">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
